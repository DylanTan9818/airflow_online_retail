[sqlfluff]
templater = dbt
dialect = bigquery  # Use your database dialect (e.g., postgres, snowflake)
exclude_rules = L009,L031  # Exclude rules you want to skip
max_line_length = 500  # Optional: Set max line length

[sqlfluff:templater:dbt]
profiles_dir = include/dbt  # Path to your dbt profiles directory relative to project root
project_dir = include/dbt  # Path to your dbt project directory relative to project root
profile = default  # Your dbt profile name
